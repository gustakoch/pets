{% extends 'layouts/base-admin.html.twig' %}
{% block title %}Adicionar tipo de vacina{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><span><a href="{{ path('app_admin') }}">Dashboard</a></span></li>
    <li class="breadcrumb-item"><span><a href="{{ path('app_vaccines_types') }}">Tipos de vacina</a></span></li>
    <li class="breadcrumb-item active"><span>Novo tipo de vacina</span></li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col">
                            <div class="card-title fs-4 fs-semibold">Adicionar tipo de vacina</div>
                        </div>
                    </div>
                    {{ form_start(form) }}
                        <div class="row mt-3">
                            <div class="col-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'name' } }) }}
                                    {{ form_label(form.name) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.description, { 'attr': { 'class': 'form-control', 'placeholder': 'description' } }) }}
                                    {{ form_label(form.description) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-primary me-2" type="submit">Adicionar tipo</button>
                        <a href="javascript:history.back()" class="btn btn-primary">Voltar</a>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

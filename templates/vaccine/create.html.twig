{% extends 'layouts/base-admin.html.twig' %}
{% block title %}Nova vacina{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><span><a href="{{ path('app_admin') }}">Dashboard</a></span></li>
    <li class="breadcrumb-item"><span><a href="{{ path('app_vaccines') }}">Vacinas</a></span></li>
    <li class="breadcrumb-item active"><span>Nova vacina</span></li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col">
                            <div class="card-title fs-4 fs-semibold">Adicionar nova vacina</div>
                        </div>
                    </div>
                    {% for message in app.flashes('vaccineCreated') %}
                        <div class="row">
                            <div class="col">
                                <div class="alert alert-danger d-flex align-items-center justify-content-between" role="alert">
                                    <div class="d-flex align-items-center gap-2">
                                        <svg class="icon" version="1.1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M10.655 17.030l3.97-3.97 3.97 3.97 1.061-1.061-3.97-3.97 3.97-3.97-1.061-1.061-3.97 3.97-3.97-3.97-1.061 1.061 3.97 3.97-3.97 3.97 1.061 1.061z"></path><path d="M22.125 3h-13.001c-0.321 0.001-0.611 0.135-0.816 0.351l-0 0-7.557 7.975v1.348l7.557 7.975c0.206 0.216 0.495 0.351 0.816 0.351h13.001c0.621-0.001 1.124-0.504 1.125-1.125v-15.75c-0.001-0.621-0.504-1.124-1.125-1.125h-0zM21.75 19.5h-12.465l-7.035-7.424v-0.152l7.035-7.424h12.465z"></path></svg>
                                        <div>{{ message }}</div>
                                    </div>
                                    <button type="button" class="btn-close" data-coreui-dismiss="alert" aria-label="Close"></button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'name' } }) }}
                                    {{ form_label(form.name) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.veterinarian, { 'attr': { 'class': 'form-control', 'placeholder': 'veterinarian' } }) }}
                                    {{ form_label(form.veterinarian) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.veterinarian) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.pet, { 'attr': { 'class': 'form-control', 'placeholder': 'pet' } }) }}
                                    {{ form_label(form.pet) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.pet) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.description, { 'attr': { 'class': 'form-control', 'placeholder': 'description' } }) }}
                                    {{ form_label(form.description) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% for message in app.flashes('vaccineTypeCreated') %}
                            <div class="row">
                                <div class="col">
                                    <div class="alert alert-success d-flex align-items-center justify-content-between" role="alert">
                                        <div class="d-flex">
                                            <svg class="bi flex-shrink-0 me-2" role="img" version="1.1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M9.331 21.375l-0.346-0.352-0.185-0.183-4.040-4.041 0.002-0.003-3.922-3.922 4.576-4.576 3.917 3.917 9.341-9.341 4.576 4.576-9.869 9.874zM6.872 16.79l2.459 2.459 0.005-0.005 0.003 0.003 2.452-2.452 0.528-0.533 8.811-8.811-2.454-2.454-9.341 9.341-3.917-3.917-2.454 2.454 3.912 3.912z"></path></svg>
                                            <div><strong>{{ message }}</strong> O tipo personalizado foi adicionado na lista abaixo.</div>
                                        </div>
                                        <button type="button" class="btn-close" data-coreui-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        <div class="row">
                            <div class="col">
                                <a href="{{ path('app_vaccines_types_create') }}" class="btn btn-sm btn-primary text-white mb-2">Adicionar tipo personalizado</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.type, { 'attr': { 'class': 'form-control', 'placeholder': 'type' } }) }}
                                    {{ form_label(form.type) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.type) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.applicationDate, { 'attr': { 'class': 'form-control', 'placeholder': 'applicationDate' } }) }}
                                    {{ form_label(form.applicationDate) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.applicationDate) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.reinforcementAt, { 'attr': { 'class': 'form-control', 'placeholder': 'reinforcementAt' } }) }}
                                    {{ form_label(form.reinforcementAt) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.reinforcementAt) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.price, { 'attr': { 'class': 'form-control', 'placeholder': 'price' } }) }}
                                    {{ form_label(form.price) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.price) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.manufacturer, { 'attr': { 'class': 'form-control', 'placeholder': 'manufacturer' } }) }}
                                    {{ form_label(form.manufacturer) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.manufacturer) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.comments, { 'attr': { 'class': 'form-control', 'placeholder': 'comments' } }) }}
                                    {{ form_label(form.comments) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.comments) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary me-2 text-white" type="submit">Adicionar vacina</button>
                        <a href="{{ path('app_vaccines') }}" class="btn btn-primary text-white">Cancelar</a>
                        {{ form_row(form._token) }}
                    {{ form_end(form, {render_rest: false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

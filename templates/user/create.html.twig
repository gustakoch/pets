{% extends 'layouts/base-admin.html.twig' %}
{% block title %}Novo usuário{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><span><a href="{{ path('app_admin') }}">Dashboard</a></span></li>
    <li class="breadcrumb-item"><span><a href="{{ path('app_users') }}">Usuários</a></span></li>
    <li class="breadcrumb-item active"><span>Novo usuário</span></li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col">
                            <div class="card-title fs-4 fs-semibold">Criar novo usuário</div>
                        </div>
                    </div>
                    {% for message in app.flashes('userExists') %}
                        <div class="row">
                            <div class="col">
                                <div class="alert alert-danger d-flex align-items-center justify-content-between" role="alert">
                                    <div class="d-flex align-items-center gap-2">
                                        <svg class="icon" version="1.1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M10.655 17.030l3.97-3.97 3.97 3.97 1.061-1.061-3.97-3.97 3.97-3.97-1.061-1.061-3.97 3.97-3.97-3.97-1.061 1.061 3.97 3.97-3.97 3.97 1.061 1.061z"></path><path d="M22.125 3h-13.001c-0.321 0.001-0.611 0.135-0.816 0.351l-0 0-7.557 7.975v1.348l7.557 7.975c0.206 0.216 0.495 0.351 0.816 0.351h13.001c0.621-0.001 1.124-0.504 1.125-1.125v-15.75c-0.001-0.621-0.504-1.124-1.125-1.125h-0zM21.75 19.5h-12.465l-7.035-7.424v-0.152l7.035-7.424h12.465z"></path></svg>
                                        <div>{{ message }}</div>
                                    </div>
                                    <button type="button" class="btn-close" data-coreui-dismiss="alert" aria-label="Close"></button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.username, { 'attr': { 'class': 'form-control', 'placeholder': 'username' } }) }}
                                    {{ form_label(form.username) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.username) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'email' } }) }}
                                    {{ form_label(form.email) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.password, { 'attr': { 'class': 'form-control', 'placeholder': 'password' } }) }}
                                    {{ form_label(form.password) }}
                                    <i class="fa fa-lg fa-eye icon-eye-password" aria-hidden="true"></i>
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.password) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col mb-3 d-flex align-items-center">
                                <button type="button" class="btn btn-warning me-2" id="btn-generate-password">Gerar senha</button>
                                <button type="button" class="btn btn-warning copy-to-clipboard">
                                    <i class="fa fa-clipboard" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>

                        <button class="btn btn-primary me-2" type="submit">Adicionar usuário</button>
                        <a href="{{ path('app_users') }}" class="btn btn-primary">Cancelar</a>
                        {{ form_row(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

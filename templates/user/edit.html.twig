{% extends 'layouts/base-admin.html.twig' %}
{% block title %}Editando usuário{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><span><a href="{{ path('app_admin') }}">Dashboard</a></span></li>
    <li class="breadcrumb-item"><span><a href="{{ path('app_users') }}">Usuários</a></span></li>
    <li class="breadcrumb-item active"><span>Editando usuário</span></li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col">
                            <div class="card-title fs-4 fs-semibold">Editando <b>{{ user.username }}</b></div>
                        </div>
                    </div>
                    {{ form_start(form) }}
                        <div class="row mt-3">
                            <div class="col-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.username, { 'attr': { 'class': 'form-control', 'placeholder': 'username' } }) }}
                                    {{ form_label(form.username) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.username) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'email', 'readonly': 'readonly' }}) }}
                                    {{ form_label(form.email) }}
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            {# <div class="col">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.password, { 'attr': { 'class': 'form-control', 'placeholder': 'password' } }) }}
                                    {{ form_label(form.password) }}
                                    <i class="fa fa-lg fa-eye icon-eye-password" aria-hidden="true"></i>
                                    <div class="form-error text-danger mt-1">
                                        {{ form_errors(form.password) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col mb-3 d-flex align-items-center">
                                <button type="button" class="btn btn-warning me-2" id="btn-generate-password">Gerar senha</button>
                                <button type="button" class="btn btn-warning copy-to-clipboard" title="Copiar para área de transferência">
                                    <i class="fa fa-clipboard" aria-hidden="true"></i>
                                </button>
                            </div> #}
                        </div>
                        <div class="row mb-3">
                            <div class="col-4">
                                <label for="assignRoles">Atribuir permissões ao usuário</label>
                                <select class="form-select" name="assignRoles[]" id="assignRoles" multiple size="3" aria-label="size 3 select example" style="height: 100px">
                                    <option value="ROLE_ADMIN">ROLE_ADMIN</option>
                                    <option value="ROLE_USER">ROLE_USER</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label>Usuário ativo</label>
                                <div class="form-check form-switch">
                                    {{ form_widget(form.isActive, { 'attr': { 'class': 'form-check-input', 'placeholder': 'password', 'role': 'switch' } }) }}
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-primary me-2" type="submit">Atualizar usuário</button>
                        <a href="{{ path('app_users') }}" class="btn btn-primary">Cancelar</a>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
